{
  "name": "heritage",
  "version": "1.0.0",
  "private": true,
  "description": "A spiffy new theme for Heritage by Bop Design based on _s, or underscores.",
  "author": "Bop Design <https://www.bopdesign.com/>",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme",
    "ACF Blocks",
    "Bootstrap",
    "Gutenberg",
    "css",
    "sass",
    "responsive",
    "front-end",
    "web"
  ],
  "homepage": "https://www.bopdesign.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Automattic/_s.git"
  },
  "bugs": {
    "url": "https://github.com/Automattic/_s/issues"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  },
  "files": [
    "dist/{css,js}/*.{css,js,map}",
    "src/scss/**/*.scss"
  ],
  "sass": "src/scss/main.scss",
  "style": "dist/css/main.css",
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@wordpress/scripts": "^19.2.2",
    "autoprefixer": "^10.3.6",
    "bootstrap": "^5.1.3",
    "clean-css-cli": "^5.4.1",
    "dir-archiver": "^1.1.1",
    "eslint": "^8.8.0",
    "eslint-config-xo": "^0.39.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-unicorn": "^40.1.0",
    "find-unused-sass-variables": "^4.0.1",
    "globby": "^11.0.4",
    "lockfile-lint": "^4.6.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.8",
    "postcss-cli": "^9.0.1",
    "sass": "^1.49.7",
    "shelljs": "^0.8.5",
    "stylelint": "14.2.0",
    "stylelint-config-twbs-bootstrap": "^3.0.1"
  },
  "scripts": {
    "build:pot": "composer run-script pot",
    "check-engines": "wp-scripts check-engines",
    "check-licenses": "wp-scripts check-licenses",
    "css": "npm-run-all css-compile css-prefix css-minify",
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css src/scss/:dist/css/",
    "css-lint": "npm-run-all --aggregate-output --continue-on-error --parallel css-lint-*",
    "css-lint-stylelint": "stylelint \"**/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache --rd",
    "css-lint-vars": "fusv src/scss/",
    "css-minify": "npm-run-all --aggregate-output --parallel css-minify-*",
    "css-minify-main": "cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output dist/css/ --batch --batch-suffix \".min\" \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "css-prefix": "npm-run-all --aggregate-output --parallel css-prefix-*",
    "css-prefix-main": "postcss --config postcss.config.js --replace \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "dist": "npm-run-all --aggregate-output --parallel css",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-main": "nodemon --watch src/scss/ --ext scss --exec \"npm-run-all css-lint css-compile css-prefix\"",
    "watch-css-dist": "nodemon --watch dist/css/ --ext css"
  }
}
